generator client {
  provider = "prisma-client-js"
  // output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  email     String   @unique

  groupMembers GroupMember[] // A user can be in multiple groups
}

model Group {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  name        String?
  description String?

  groupMembers          GroupMember[] // A group can have multiple users
  transactions          Transaction[] // A group makes multiple transactions
  recurringTransactions RecurringTransaction[] // A group can have multiple recurring transactions
}

model GroupMember {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  userId    String   @db.Uuid
  groupId   String   @db.Uuid
  nickname  String

  transactions          Transaction[] // A groupMember can make multiple transactions (payer)
  recurringTransactions RecurringTransaction[] // A groupMember can be responsible for paying multiple recurring transactions (payer)
  expenses              Expense[] // A groupMember can incur multiple expenses (payee)
  recurringExpenses     RecurringExpense[]
  outgoingSettlements   Settlement[]           @relation("Payer")
  incomingSettlements   Settlement[]           @relation("Recipient")
  user                  User                   @relation(fields: [userId], references: [id])
  group                 Group                  @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

model Transaction {
  id            String   @id @default(uuid()) @db.Uuid
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  date          DateTime @default(now()) // actual transaction date
  groupId       String   @db.Uuid
  groupMemberId String   @db.Uuid
  amount        Decimal
  title         String

  expenses    Expense[] // Each transaction creates multiple expenses (these are the splits)
  group       Group       @relation(fields: [groupId], references: [id])
  groupMember GroupMember @relation(fields: [groupMemberId], references: [id])
}

model Expense {
  id            String   @id @default(uuid()) @db.Uuid
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  amount        Decimal
  groupMemberId String   @db.Uuid
  transactionId String   @db.Uuid

  groupMember GroupMember @relation(fields: [groupMemberId], references: [id])
  transaction Transaction @relation(fields: [transactionId], references: [id])
}

model Settlement {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  payerId     String   @db.Uuid
  recipientId String   @db.Uuid
  amount      Decimal

  payer     GroupMember @relation("Payer", fields: [payerId], references: [id])
  recipient GroupMember @relation("Recipient", fields: [recipientId], references: [id])

  @@unique([payerId, recipientId])
}

model RecurringTransaction {
  id             String    @id @default(uuid()) @db.Uuid
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now()) @updatedAt
  groupId        String    @db.Uuid
  groupMemberId  String    @db.Uuid
  title          String
  amount         Decimal
  interval       String // 'daily', 'weekly', 'monthly', 'yearly'
  startDate      DateTime
  endDate        DateTime?
  nextOccurrence DateTime
  // splitRules     Json // store payee IDs and proportions

  group             Group              @relation(fields: [groupId], references: [id])
  groupMember       GroupMember        @relation(fields: [groupMemberId], references: [id])
  recurringExpenses RecurringExpense[]
}

model RecurringExpense {
  id                     String  @id @default(uuid()) @db.Uuid
  recurringTransactionId String  @db.Uuid
  groupMemberId          String  @db.Uuid
  amount                 Decimal

  recurringTransaction RecurringTransaction @relation(fields: [recurringTransactionId], references: [id])
  groupMember          GroupMember          @relation(fields: [groupMemberId], references: [id])
}
